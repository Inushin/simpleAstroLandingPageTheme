---
const { title, text, imgSrc, imgAlt, imagePosition } = Astro.props;
---

<section class="px-4 py-8 antialiased bg-gray-900 md:py-16">
  <div
    class="mx-auto grid max-w-screen-xl rounded-lg p-4 bg-gray-800 md:p-8 lg:grid-cols-12 lg:gap-8 lg:p-16 xl:gap-16"
  >
    <div
      class={`lg:col-span-5 lg:mt-0 ${imagePosition === "right" ? "lg:order-2" : ""}`}
    >
      <img
        class="mb-4 h-56 w-56 dark:hidden sm:h-96 sm:w-96 md:h-full md:w-full"
        src={imgSrc}
        alt={imgAlt}
      />
      <img class="mb-4 hidden dark:block md:h-full" src={imgSrc} alt={imgAlt} />
    </div>
    <div class="me-auto place-self-center lg:col-span-7">
      <h1
        class="mb-3 text-2xl font-bold leading-tight tracking-tight text-white md:text-4xl"
      >
        {title}
      </h1>
      <p class="mb-6 text-gray-400">{text}</p>
    </div>
  </div>
</section>
